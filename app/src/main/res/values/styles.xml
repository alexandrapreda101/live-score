<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="AppThemeBlack" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/very_dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="login_background">
        <item name="android:background">@drawable/app_background_image</item>
    </style>
    <style name="login_font">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="login_main">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="sec_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:radius">20dp</item>
    </style>
    <style name="first_button">
        <item name="android:width">150dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="another_button">
        <item name="android:width">150dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="sign_up">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>